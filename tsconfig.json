{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "allowJs": true,
    "module": "es6",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "hooks/*": [
        "./src/hooks/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "constants/*": [
        "./src/constants/*"
      ],
      "images/*": [
        "./src/images/*"
      ],
      "screens/*": [
        "./src/screens/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "navigation/*": [
        "./src/navigation/*"
      ],
      "stores/*": [
        "./src/stores/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
  ]
}