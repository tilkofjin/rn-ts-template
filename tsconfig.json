{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "allowJs": true,
    "module": "es6",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "images/*": [
        "./src/images/*"
      ],
      "screens/*": [
        "./src/screens/*"
      ],
      "navigation/*":[
        "./src/navigation/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
  ]
}